extends layout

block content
    .jumbotron.showcase
        .container
            h1 SportsBlog
            p.lead Sports worth talking about.
    .container
        .row
            .col-md-12
                each article, i in articles
                    a(href='/articles/show/' + article._id)
                        h2.post-title  #{article.title}
                    h4.post-subtitle #{article.subtitle}
                    p.post-meta
                        | Posted by #{article.author}
                        | on #{moment(article.created_at).format('HHMM Do YYYY, h:mm:ss a')}
                        hr